{
  "compilerOptions": {
    "target": "ES2018",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "*": [
        "node_modules/*",
        "packages/hooks/node_modules/*",
        "packages/hooks/src/@types/*"
      ]
    }
  },
  "include": ["packages/hooks/src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}

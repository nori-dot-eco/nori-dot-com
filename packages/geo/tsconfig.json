{
  "compilerOptions": {
    "target": "ES2018",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}

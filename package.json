{
  "version": "0.0.0",
  "private": true,
  "name": "nori-dot-com",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^17.0.0",
    "codecov": "^3.8.1",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "ts-jest": "^27.1.1",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "build": "lerna run build -- --force",
    "watch": "lerna run watch --parallel",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "prepare": "yarn run build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "jest": {
    "projects": [
      {
        "testMatch": [
          "<rootDir>/packages/math/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "math",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/project/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "project",
        "preset": "ts-jest",
        "globals": {
          "ts-jest": {
            "tsconfig": "./packages/project/tsconfig.json"
          }
        }
      },
      {
        "testMatch": [
          "<rootDir>/packages/quantification/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "quantification",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/ggit/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "ggit",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/errors/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "errors",
        "preset": "ts-jest"
      }
    ]
  }
}

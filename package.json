{
  "version": "1.6.0",
  "private": true,
  "name": "nori-dot-com",
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "~17",
    "@types/react-dom": "~17",
    "codecov": "^3.8.1",
    "jest": "^29.2.1",
    "lerna": "^5.1.6",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.6.2",
    "nx": "14.3.6"
  },
  "scripts": {
    "build": "nx run-many --target=build --all -- --force",
    "watch": "nx run-many --target=watch --all",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "prepare": "yarn run build"
  },
  "resolutions": {
    "@types/react-dom": "~17",
    "@types/react": "~17"
  },
  "workspaces": {
    "nohoist": [
      "@nori-dot-com/eslint-config-nori/**"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "jest": {
    "projects": [
      {
        "testMatch": [
          "<rootDir>/packages/math/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "math",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/project/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "project",
        "preset": "ts-jest",
        "globals": {
          "ts-jest": {
            "tsconfig": "./packages/project/tsconfig.json"
          }
        }
      },
      {
        "testMatch": [
          "<rootDir>/packages/quantification/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "quantification",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/ggit/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "ggit",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/errors/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "errors",
        "preset": "ts-jest"
      }
    ]
  }
}
